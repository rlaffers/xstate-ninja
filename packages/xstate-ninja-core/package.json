{
  "name": "xstate-ninja",
  "version": "1.0.0",
  "description": "XState Ninja hooks for vanilla JS in browsers",
  "keywords": ["xstate", "fsm", "state machine"],
  "author": "Richard Laffers",
  "license": "ISC",
  "type": "module",
  "main": "./dist/xstate-ninja.umd.js",
  "module": "./dist/xstate-ninja.js",
  "types": "dist/index.d.ts",
  "files": ["dist/*.js", "dist/*.d.ts"],
  "exports": {
    ".": {
      "import": "./dist/xstate-ninja.js",
      "require": "./dist/xstate-ninja.umd.cjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --noEmit false --emitDeclarationOnly true",
    "preview": "vite preview"
  },
  "devDependencies": {
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "vite": "^3.0.0",
    "xstate": "^4.32.1"
  },
  "peerDependencies": {
    "xstate": "^4.32.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rlaffers/xstate-ninja"
  },
  "volta": {
    "node": "16.15.0",
    "npm": "8.11.0"
  }
}
