{
  "name": "xstate-ninja",
  "version": "2.0.0",
  "description": "XState Ninja core library for vanilla JS in browsers",
  "keywords": [
    "xstate",
    "fsm",
    "state machine"
  ],
  "author": "Richard Laffers",
  "license": "ISC",
  "type": "module",
  "main": "./dist/xstate-ninja.umd.cjs",
  "module": "./dist/xstate-ninja.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "dist/*.cjs"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/xstate-ninja.js",
      "require": "./dist/xstate-ninja.umd.cjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "concurrently \"tsc --watch --noEmit false --emitDeclarationOnly true\" \"vite build --watch\"",
    "build": "vite build && tsc --noEmit false --emitDeclarationOnly true",
    "test": "vitest",
    "check": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "preview": "vite preview",
    "prepublish": "pnpm check && pnpm lint && pnpm test -- --run"
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "eslint": "8",
    "happy-dom": "^12.4.0",
    "tslib": "^2.4.0",
    "typescript": "^5.2.2",
    "vite": "^3.2.7",
    "vitest": "^0.34.6",
    "xstate": "^4.38.2"
  },
  "peerDependencies": {
    "xstate": "^4.33.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rlaffers/xstate-ninja"
  },
  "volta": {
    "node": "18.17.0"
  }
}
