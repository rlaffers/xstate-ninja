{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": false,
    "noEmitOnError": true,
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "include": ["lib/**/*.ts", "lib/**/*.svelte"]
}
