{
  "name": "xstate-explorer",
  "version": "0.0.0-development",
  "description": "Devtool for XState state machines",
  "main": "dist/xstate-explorer.umd.js",
  "module": "dist/xstate-explorer.es.js",
  "files": ["dist"],
  "exports": {
    ".": {
      "import": "./dist/xstate-explorer.es.js",
      "require": "./dist/xstate-explorer.umd.js"
    }
  },
  "scripts": {
    "test": "jest --passWithNoTests",
    "lint": "eslint src/ example/",
    "format": "prettier --write README.md src/**/*.js",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "dev": "concurrently \"cd example && npm run dev\"  \"wait-on -c .wait-on-config.json http-get://localhost:4000 && vite build --watch\"",
    "preview": "vite preview",
    "build": "vite build",
    "semantic-release": "semantic-release"
  },
  "keywords": ["xstate"],
  "author": "Richard Laffers",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "commitizen": "^4.2.4",
    "concurrently": "^7.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.7.0",
    "semantic-release": "^19.0.2",
    "vite": "^2.9.9",
    "vite-plugin-web-extension": "^1.4.0",
    "wait-on": "^6.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "sideEffects": false,
  "homepage": "https://github.com/rlaffers/xstate-explorer",
  "repository": {
    "type": "git",
    "url": "https://github.com/rlaffers/xstate-explorer"
  },
  "volta": {
    "node": "16.15.0",
    "npm": "8.11.0"
  }
}
