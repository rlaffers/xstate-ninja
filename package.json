{
  "name": "xstate-monorepo",
  "private": true,
  "version": "0.0.0-development",
  "description": "Modern devtools for XState state machines",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel --filter=./packages/* --filter=./example --filter=./extension run dev",
    "lint": "eslint --no-error-on-unmatched-pattern --cache packages/ example/ example-svelte/ extension/ example-react/",
    "lint:all": "eslint --no-error-on-unmatched-pattern packages/ example/ example-svelte/ extension/ example-react/",
    "lint:fix": "eslint --fix --no-error-on-unmatched-pattern packages/ example/ example-svelte/ extension/ example-react/",
    "test": "pnpm test -r",
    "format": "prettier --write README.md packages/**/*.{js,ts,svelte} extension/**/*.{js,ts,svelte} example/**/*.{ts,js} example-svelte/**/*.{js,ts,svelte}",
    "format:check": "prettier --check README.md packages/**/*.{js,svelte} extension/**/*.{js,svelte} example-svelte/**/*.{js,svelte}",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "keywords": ["xstate", "state machines", "fsm"],
  "author": "Richard Laffers",
  "license": "ICS",
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.49",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^7.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.7.0",
    "semantic-release": "^19.0.2",
    "svelte": "^3.49.0",
    "vite": "^2.9.9",
    "vite-plugin-web-extension": "^1.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "sideEffects": false,
  "homepage": "https://github.com/rlaffers/xstate-ninja",
  "repository": {
    "type": "git",
    "url": "https://github.com/rlaffers/xstate-ninja"
  },
  "volta": {
    "node": "16.15.0",
    "npm": "8.11.0"
  }
}
